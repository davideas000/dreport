project                          = tupcpp
description                      = tup based c project
type                             = tupcpp
version                          = 0.0.1
build_file                       = Tupfile

# commands
insert_library                  = LIBS += ... >> Tupfile
insert_include_directory        = INCLUDE_DIRS += ... >> Tupfile
bump_version                    = \d+\.\d+\.\d+ >> version
